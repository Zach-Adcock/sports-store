extends layout 

block content 
  h1=title 
  form(method='POST' action='' enctype="multipart/form-data")
    div.form-group
      label(for='name') Sport Name:
      input#name.form-control(type='text' placeholder='Sport name' name='name' required='true')
    div.form-group
      label.form-label(for='image') Image:
      input#image.form-control(type='file', name='image' required='true')
    button.btn.btn-primary(type='submit') Submit 
  if errors
    ul
      for error in errors
        li!= error.msg
