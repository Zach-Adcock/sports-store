extends ../layout 

block content 
  main(class="min-h-screen mt-14 flex flex-col items-center px-4 overflow-x-hidden")
    h1(class="font-extrabold text-3xl md:text-5xl")=title 
    div(class="w-5/6 sm:w-full sm:mx-auto sm:max-w-lg mt-14")
      div(class="bg-slate-500 p-6 shadow-xl rounded-lg md:px-10")
        form(class="space-y-5" method='POST' action='')
            div(class= "")
                label(for='email' class="font-bold text-white") Email:
                div(class= "mt-2")
                    input(type='email' placeholder='Email' name='email' required='true')
            div(class= "")
                label(for='password' class="font-bold text-white") Password:
                div(class= "mt-2")
                    input(type='password' placeholder='Password' name='password' required='true')
            div(class="flex justify-center")
                input(type="hidden" name="_csrf" value=csrfToken)
                button(type="submit" class="w-1/2 flex justify-center border border-transparent rounded-md shadow-md \
                text-white bg-cyan-400 hover:bg-cyan-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-cyan-400") Sign In
    if (validationErrors.length)
        ul(class = "mt-6")
            for error in validationErrors
                li(class = "mt-2 error font-bold")!= error
    if (userInputError)
        ul(class = "mt-6")
            for error in userInputError
                li(class = "mt-2 error font-bold")!= error.msg
    if errors
      ul
        for error in errors
          li!= error.msg
