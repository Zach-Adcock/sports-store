extends layout

block content
  main(class="h-5/6 w-full md:h-3/5 flex flex-col items-center mt-14")
    div(class="md:max-h-52 md:h-1/6 w-7/12 md:w-auto flex justify-center m-auto")
          img(class="md:max-h-44 w-auto drop-shadow", src=brand.image)
    if !brand.image
      h1(class="text-4xl font-bold mt-4") #{brand.name}
    if brand.description
     p(class="mt-8") Brand description: #{brand.description}
    if brand.year_created
     p Year created: #{brand.year_created}

    

    if (brand_products.length)
      h4(class="text-2xl font-bold mt-8") Products in store
        div(class="w-full md:w-3/5 md:h-96 flex flex-col items-center")
          each product in brand_products
            ul(class="flex justify-center")
              div(class="w-full md:w-3/5 flex justify-center items-center mt-6")
                a(class="max-h-4/5 w-7/12 flex justify-center", href=product.url)
                  img(class="h-auto w-5/6 drop-shadow", src=product.image)
                div(class="w-5/12 flex flex-col items-center")
                  a(class="text-2xl text-center", href=product.url) #{product.name}
                  div $!{product.price}
    else
      p(class="text-xl font-bold mt-8 text-center") This Brand has no products currently.
            

    if (fail_message)
      div(class="bg-sky-500 h-20 md:h-16 w-5/6 md:w-1/3 mt-14 mx-auto flex items-center justify-center text-center")
        div(class="m-auto text-rose-700") 
          p #{fail_message}
    else 
      a(class="bg-sky-500 h-12 w-5/6 md:w-1/3 mt-14 mx-auto flex items-center justify-center text-center", href=brand.url+'/delete')
        div(class="m-auto") Delete Brand

