extends layout

block content

  main(class="h-full w-full md:h-3/5 mt-4 flex flex-col items-center")
    h4(class="text-2xl font-bold mt-4")= title
    if (product_list.length)
        ul(class="md:w-11/12 md:h-[40rem] flex flex-col justify-center md:flex-row md:flex-wrap md:content-start mb-8 overflow-x-hidden")
          each product in product_list
              div(class="max-w-full md:w-1/4 max-h-36 md:max-h-72 md:h-60 flex justify-center items-center shadow-xl md:border-4 rounded-lg border-cyan-400 my-4 mx-6")
                a(class="max-h-inherit w-7/12 flex justify-center p-3", href=product.url)
                  img(class="h-auto w-5/6 rounded-md", src=product.image)
                div(class="w-5/12 flex flex-col items-center p-1")
                  a(class="text-2xl text-center", href=product.url) #{product.name}
                  div $!{product.price}

    else
      p This store is all out of products.
        
